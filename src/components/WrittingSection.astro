---
import Date from '../components/Date';
import { ArrowUpRightIcon } from '../components/Icons';
const allPosts = await Astro.glob('../pages/posts/*.md')
// filter only the latest 3 posts
const latestPosts = allPosts.slice(0, 3)
---
<section class="text-neutral-50 mt-8 m-4 flex flex-col gap-2 border border-neutral-50/10 p-4 rounded-lg">
  <h1 class="font-medium">Writting</h1>
  <p class="text-neutral-50/50 text-sm">
    Writting about my journey as a developer and my experiences with different technologies and desing.
  </p>
  <ul class="flex flex-col gap-2">
    {latestPosts.map((post) => 			
      <a href={post.url} class="group">
        <li class="flex justify-between list-none border-2 border-transparent hover:border-2 rounded-lg hover:border-[#85301b] p-[0.88rem] hover:bg-[#292111] transition-all duration-500">
          <div class="flex flex-col">
            <p class="font-medium">{post.frontmatter.title}</p>
            <Date dateString={post.frontmatter.pubDate} formater="LLL d, yyyy" />
          </div>
          <span class="opacity-0 group-hover:opacity-100 transition-all duration-300">
            <ArrowUpRightIcon />
          </span>
        </li>
      </a>	
    )}
  </ul>
  <a href="/posts">
    <div class="text-neutral-50  border border-neutral-50/10 hover:border-neutral-50/30 rounded-lg text-center bg-[#1c1c1c] transition-all duration-300">
      <button class="py-2 border-transparent font-medium">
        All Articles
      </button>
    </div>
  </a>		
</section>